<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
  
    <div class="row mt-3">
<div class="col md-12">
    <%- include('../partials/flashMessages') -%>
</div>      
    
    </div>

    
    
  <% chunk.forEach((events)=> {%>
    <div class="row mt-3">

   
        <% events.forEach((event)=> {%>
          <div class="col-sm-6 col-md-4">
              <div class="card">
                <img class="card-img-top" src="<%= event.image_url %>" alt="Card image cap" style="height: 250px; width: 350px;">

                  
                  <div class="card-body">
                    <h5 class="card-title"><%= event.title%></h5>
                    <p><%= event.price%></p>
                    <p><%= event.location%></p>
                    <a href="<%=  '/events/show/'  + event.id %>" class="btn btn-primary">Show More</a>

                    <form action="/events/cart" method="POST">
                      <input type="hidden" id="product_id" name="product_id" value="<%= event.product_id%>">
                      <button type="submit" class="btn btn-success" style="margin-top: 15px;">Add to cart</button>
                    </form>
                  </div>
                </div>
          </div>
          <%})%>
    </div>

  <%})%>
<div class="row"> 
  <div class="col-12 mt-2 mb-4">
    <nav aria-label="...">
      <ul class="pagination pagination-lg justify-content-center">
        <% for (let i=1 ; i <= Math.ceil(total/5); i++) {%>
        
          <% if (pageNo == i) {%>
            <li class="page-item active"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
          <%} else { %>
          <li class="page-item"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
          <%}%>
        
        <%}%>
      </ul>
    </nav>
  </div>
</div>
</div>



<%- include('../partials/footer') -%>